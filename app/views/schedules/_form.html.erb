    <%= form.label :time, style: "display: block" %>
    <%= form.datetime_field :time %>
  </div>

  <div>
    <%= form.label :department_id, 'Department', style: "display: block" %>
    <%= form.collection_select :department_id, Department.all, :id, :name, prompt: 'Select a department' %>
